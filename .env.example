# MacBook M1 Vibe Coding Setup - Environment Variables
# Copy this file to .env and fill in your values

# M1 Optimization
M1_OPTIMIZED=true
CONDA_ENV_PATH="/Volumes/LLM/miniconda3/envs/vibe-coding"
COLIMA_CPU=4
COLIMA_MEMORY=4
COLIMA_DISK=150

# External Storage
LLM_DISK_PATH="/Volumes/LLM"
CONDA_ROOT_PATH="/Volumes/LLM/miniconda3"

# Development Tools
EDITOR="code"
BROWSER="chrome"
TERM="xterm-256color"

# Task Management
TASK_MASTER_TOOLS="standard"
TASK_EDITOR="code"

# API Keys (optional - for AI features)
ANTHROPIC_API_KEY="your_anthropic_api_key_here"
OPENAI_API_KEY="your_openai_api_key_here"
PERPLEXITY_API_KEY="your_perplexity_api_key_here"
GROQ_API_KEY="your_groq_api_key_here"

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL="info"
MONITORING_INTERVAL=300

# Vibe Coding Settings
DAILY_WORK_HOURS=6
FOCUS_SESSION_LENGTH=90
BREAK_LENGTH=15
LEARNING_HOURS=1